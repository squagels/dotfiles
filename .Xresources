! urxvt -------------------------------------------------------------------------

urxvt*geometry:         108x40
urxvt*background:       [65]#000000
urxvt*scrollBar:        false
urxvt*internalBorder:   20
urxvt*depth:            32
urxvt*loginShell:       true

! Xcursor -----------------------------------------------------------------------

Xcursor.theme:          Vanilla-DMZ-AA
Xcursor.size:           22

! Fonts -------------------------------------------------------------------------

Xft.dpi:                96
Xft.antialias:          true
Xft.rgba:               rgb
Xft.hinting:            true
Xft.hintstyle:          hintslight
